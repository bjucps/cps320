<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BackgroundWorkDemos.ThreadPage">
    
    <StackLayout Padding="20">
        <Label Text="Count up to:" />
        <Entry x:Name="entUpto" Text="5" />
        <Button Text="Start Thread" Clicked="StartThread_Clicked" />
        <Button Text="Start No Thread" Clicked="StartNoThread_Clicked" />
        <Label x:Name="lblCount" Text="0" />
    </StackLayout>
    
</ContentPage>